# This is Git's per-user configuration file.
[user]
	name = Aleksey Maksimov
	email = aleksey.maksimov@sc.com
	signingkey = 73B247E7C736117E
[alias]
    lol = "log --graph --decorate --pretty=format:'%C(yellow)%h%Creset -%C(bold red)%d%Creset %s  %C(white)- %an, %ar%Creset' --abbrev-commit"
    lola = "log --graph --decorate --pretty=oneline --pretty=format:'%C(yellow)%h%Creset -%C(bold red)%d%Creset %s  %C(white)- %an, %ar%Creset' --abbrev-commit --all"
[core]
	editor = nvim
	commentChar = ";"
	pager = less -FX
	commentChar = ";"
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[pull]
	rebase = true
[diff]
    tool = nvimdiff
	algorithm = histogram
    colorMoved = plain
    renames = true
[merge]
    tool = nvimdiff
	conflictstyle = zdiff3
[difftool "nvimdiff"]
    prompt = true
    keepBackup = false
    trustExitCode = true
    # Set nvim as the editor
    cmd = nvim -d  \"$LOCAL\" \"$REMOTE\"
[mergetool "nvimdiff"]
    prompt = false
    keepBackup = false
    trustExitCode = true
    # Set nvim as the editor
    cmd = nvim -d -c \"wincmd l\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[push]
	followTags = true
	default = current
    autoSetupRemote = true
    renames = true
[gpg]
	program = gpg
[url "https://gitlab.com/cznic/mathutil.git"]
    insteadOf = https://gitlab.com/cznic/mathutil
[url "https://gitlab.com/cznic/xc.git"]
    insteadOf = https://gitlab.com/cznic/xc
[url "https://gitlab.com/cznic/golex.git"]
    insteadOf = https://gitlab.com/cznic/golex
[url "https://gitlab.com/cznic/cc.git"]
    insteadOf = https://gitlab.com/cznic/cc
[url "https://gitlab.com/cznic/strutil.git"]
    insteadOf = https://gitlab.com/cznic/strutil
[url "https://github.com/googleapis/google-cloud-go.git"]
    insteadOf = https://cloud.google.com/go?go-get=1
[init]
	templateDir = /home/scb/.git_template
	defaultBranch = master
[rebase]
	autoSquash = true
    autoStash = true
    updateRefs = true
[fetch]
	prune = true
    pruneTags = true
    all = true
[credential]
	helper = store

